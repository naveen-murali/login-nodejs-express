<div class="container-fluid p-4">
    <div class="container">
        {{> _success}}
        {{> _error}}
        <table class="table table-hover">
            <thead class="table-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Option</th>
                </tr>
            </thead>
            <tbody>
            {{#if clients}}
                {{#each clients }}
                    <tr>
                        <th scope="row">{{this.index}}</th>
                        <td>{{this.name}}</td>
                        <td>{{this.email}}</td>
                        <td>
                            <a href="/admin/deleteUser/{{this.email}}" onclick="deleteUser(event, this)">Delete</a>
                        </td>
                    </tr>
                {{/each}}
            {{else}}
                <tr>
                    <th scope="row" colspan="4" class="text-center">{{reason}}</th>
                </tr>
            {{/if}}
            </tbody>
        </table>
    </div>
</div>